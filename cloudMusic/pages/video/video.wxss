/* pages/video/video.wxss */
.videoContainer .header {
  display: flex;
  padding: 10rpx;
}
.videoContainer .header image {
  width: 60rpx;
  height: 60rpx;
}
.videoContainer .header .search {
  border: 1 rpx solid #eee;
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  line-height: 60rpx;
  color: #d43c33;
  font-weight: 100;
}
.navScroll {
  display: flex;
  white-space: nowrap;
  height: 60rpx;
}
.navScroll .navItem {
  padding: 0 30rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.navScroll .navContent {
  height: 60rpx;
  box-sizing: border-box;
}
.navScroll .navItem .active {
  border-bottom: 1px solid #d43c33;
}
.videoItem {
  padding: 0 3%;
}
.videoItem video {
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}
